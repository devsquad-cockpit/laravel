{
    "name": "devsquad/cockpit",
    "description": "A Freemium package to help you tracking the project errors",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "DevSquad",
            "homepage": "https://devsquad.com"
        }
    ],
    "require": {
        "php": "^7.3|^7.4|^8.0|^8.1",
        "ext-json": "*",
        "ext-pdo": "*",
        "illuminate/database": "^6.9|^7.0|^8.0|^9.0",
        "illuminate/log": "^6.9|^7.0|^8.0|^9.0",
        "illuminate/support": "^6.9|^7.0|^8.0|^9.0",
        "spatie/ray": "^1.34",
        "spatie/backtrace": "^1.2",
        "guzzlehttp/guzzle": "^7.5",
        "livewire/livewire": "^2.0"
    },
    "require-dev": {
        "orchestra/testbench": "v6.9.0|^7.7",
        "phpunit/phpunit": "^9.3.3",
        "phpmd/phpmd": "^2.9",
        "squizlabs/php_codesniffer": "^3.6",
        "friendsofphp/php-cs-fixer": "^3.0",
        "brianium/paratest": "^6.2"
    },
    "autoload": {
        "psr-4": {
            "Cockpit\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Cockpit\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage",
        "test": [
            "./vendor/bin/phpunit --testdox"
        ],
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ],
        "fix": [
            "./vendor/bin/php-cs-fixer fix --using-cache=no --verbose"
        ],
        "verify": [
            "./vendor/bin/php-cs-fixer fix --dry-run --using-cache=no --verbose --stop-on-violation",
            "./vendor/bin/phpcs --standard=phpcs.xml",
            "./vendor/bin/phpmd src text ./phpmd.xml",
            "./vendor/bin/phpunit"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Cockpit\\CockpitServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
